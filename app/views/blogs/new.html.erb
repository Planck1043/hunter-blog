<h1>新建博客</h1>
<%= form_for @blog do |f| %>
  <% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@blog.errors.count, "error") %>禁止
      新建博客出现错误
    </h2>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label "标题" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "内容" %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "提交" %>
  </p>
<% end %>
</p>
<%= link_to '返回', blogs_path %>
