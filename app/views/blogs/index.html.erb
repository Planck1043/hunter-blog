<h1>个人博客首页</h1>
<p>
  <%= link_to '新建博客', new_blog_path %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
    <th>操作</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr class="text-info">
    <td><%= link_to "#{blog.title}", blog_path(blog)  %></td>
    <td><%= blog.text %></td>
    <td><%= link_to "显示", blog_path(blog) %><span style="margin-left: 5px">|</span>
        <%= link_to "修改", edit_blog_path(blog) %><span style="margin-left: 5px">|</span>
        <%= link_to "删除", blog_path(blog),
            method: :delete, data: {confirm: "确认删除 ？"} %>
    </td>
  </tr>
  <% end %>

</table>
